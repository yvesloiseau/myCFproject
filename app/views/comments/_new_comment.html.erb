<div id="reviews" class="<%= signed_in? ? 'show-div good newComment' : 'bad hide-div' %>">
<!-- <div class="newComment"> -->
  <% if signed_in? %>

    <h3 class="reviewHeaders">Add a review:</h3>

    <%= form_for([@product, @product.comments.build]) do |f| %>

      <div class="field">
        <p>
          <%= f.label :text, "Comments", :class => 'formText'  %><br>
          <%= f.text_area :text,cols: 25, rows: 10, class: 'form_control' %>
        </p>
      </div>

      <!-- <div class="field"> -->
        <p class="ratingField">Rating:
          <div class="rating"></div>
        </p>
      <!-- </div> -->

      <div class="actions">
        <p>
          <%= f.submit "Submit" %>
        </p>
      </div>

    <% end %>
  <% end %>
  </div>
<div id="reviews" class="<%= signed_in? ? 'bad hide-div newComment' : 'show-div good newComment'  %>">
    <h3 class="reviewHeaders">Sign-in to review this product</h3>
</div>