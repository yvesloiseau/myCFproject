<div class="container-fluid anchor_show" id="show">
  <div class="row">
    <div class="col-md-6 col-xs-6"> <!-- col-md-4 col-xs-8 -->

      <p id="notice"><%= notice %></p>

      <h2 class="productName">    
        <strong><%= @product.name %></strong>
      </h2>

      <p><%= image_tag(@product.image_url, size: "450x450", alt: "Edit Entry", class: "logoimg")%></p>

    </div>

    <div class="col-md-6 col-xs-6"> 
      <div class="productFields">

        <h2>
          <strong>Product features:</strong>
        </h2>
        <p>
          <strong><%= @product.description %></strong>
        </p>
        <br>
        <p>
          <strong>Type:</strong>
          <%= @product.prd_type %>
        </p>

        <p>
          <strong>Brand:</strong>
          <%= @product.brand %>
        </p>

        <p>
          <strong>Color:</strong>
          <%= @product.color %>
        </p>

        <p>
          <strong>Price:</strong>
          <%= number_to_currency(@product.price) %>
        </p>

        <h3>Other features</h3>

        <p>
          <%= @product.feature1 %>
        </p>

        <p>
          <%= @product.feature2 %>
        </p>

        <p>
          <%= @product.feature3 %>
        </p>
      </div>


    </div>
  </div>

<!-- Edit current product -->
<%= button_to "Edit", edit_product_path(@product), class: 'btn btn-primary btn-sm', :method => :get %>

<!-- Back to product list -->
<%= button_to "Back", products_path, class: 'btn btn-primary btn-sm inline', :method => :get %>

<!-- SHow next record -->
<%= button_to "Next", product(@product.each), class: 'btn btn-primary btn-sm', :method => :get %>


</div>